<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.input.KeyCodeCombination?>

<MenuBar maxWidth="1.7976931348623157E308" useSystemMenuBar="true" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.medzik.librepass.desktop.gui.dashboard.MenuController">
  <menus>
    <Menu mnemonicParsing="false" text="File">
      <items>
            <MenuItem mnemonicParsing="false" onAction="#onLogout" text="Logout" />
        <MenuItem fx:id="exit" onAction="#onExit" mnemonicParsing="false" text="Exit">
               <accelerator>
                  <KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
               </accelerator></MenuItem>
      </items>
    </Menu>
      <Menu mnemonicParsing="false" text="Edit">
        <items>
          <MenuItem fx:id="debug" mnemonicParsing="false" text="Add New Cipher" />
            <MenuItem mnemonicParsing="false" text="Delete Cipher" />
            <MenuItem mnemonicParsing="false" text="Edit Cipher" />
        </items>
      </Menu>
    <Menu mnemonicParsing="false" text="Settings">
         <items>
            <Menu mnemonicParsing="false" text="Theme">
               <items>
                  <RadioMenuItem fx:id="themeLight" mnemonicParsing="false" onAction="#onThemeRadio" text="Light">
                     <toggleGroup>
                        <ToggleGroup fx:id="theme" />
                     </toggleGroup>
                  </RadioMenuItem>
                  <RadioMenuItem fx:id="themeDark" mnemonicParsing="false" onAction="#onThemeRadio" text="Dark" toggleGroup="$theme" />
               </items>
            </Menu>
         </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Help">
      <items>
        <MenuItem mnemonicParsing="false" text="About" />
      </items>
    </Menu>
  </menus>
</MenuBar>
